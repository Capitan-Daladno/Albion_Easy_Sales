<h1>Отредактировать событие</h1>

<%= render 'form' %>

<div class="col-md-4">
  <div class="row">
    <% # убрать это отсюда %>
    <p>Каждому: <% if @event.users.count != 0 %></p>
      <%= @event.event_money / @event.users.count %>
      <% else %>
      <% nil %>
    <% end %>
    <ul class="users">
      <% @event.users.each do |user| %>
    <li>
      <%= user.name %>
    </li>
    <% end %>
    </ul>

  </div>
</div>
