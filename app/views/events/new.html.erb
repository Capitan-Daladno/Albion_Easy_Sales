<h1>Новое событие</h1>

<%= form_for(@event) do |f| %>

  <div class="col-sm-6 col-md-4">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :datetime %>
      <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
    </div>

    <div class="form-group">
      <%= f.label :event_money %>
      <%= f.text_field :event_money, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
      или <%= link_to 'вернуться', :back %>
    </div>
  </div>

<% end %>

<div class="col-sm-6 col-md-4">

  <%= form_with model: @user do |user_form| %>
    <%= user_form.collection_select(:user_id, User.all, :id, :name) %>
    <% if user_form = nil %>
      <%= user_form.collection_select(:user_id, User.all, :id, :name) %>
    <% else %>
      <%= options_from_collection_for_select(User.all, :id, :name) %>
    <% end %>
  <% end %>

  <%= options_from_collection_for_select(User.all, :id, :name) %>
  <%= collection_select(:user, :user_id, User.all, :id, :name) %>
</div>
