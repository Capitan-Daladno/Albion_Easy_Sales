<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3><%= event.title %></h3>
          <h3><%= event.event_money %></h3>
          <p>Показать участников</p>
          <% event.users.each do |user| %>
            <%= user.name %>
          <% end %>
          <h3><small><%= event.datetime %></small></h3>

          <h3> <%= event.status %> </h3>
        </div>
      </div>
    </div>
  </div>
</div>
