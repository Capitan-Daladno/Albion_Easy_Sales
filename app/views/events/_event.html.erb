<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3><%= link_to event.title, event %></h3>
          <h3><%= event.event_money %></h3>
          <p>Каждому: <% if event.users.count != 0 %></p>
          <%= event.event_money / event.users.count %>
          <% else %>
          <% nil %>
          <% end %>
          <p>Кол-во участников: <%= event.users.count %></p>
          <% event.users.each do |user| %>
            <%= user.name %>
          <% end %>
          <h3><small><%= event.datetime %></small></h3>
          <% if event.status == true %>
          <h3> Продано </h3>
          <% else %>
          <% nil %>
          <% end %>
          <%= link_to "Редактировать", edit_event_path(event), class: 'btn btn-primary'%>
        </div>
      </div>
    </div>
  </div>
</div>
