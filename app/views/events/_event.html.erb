<div class="col-md-4 test-height">
  <div class="thumbnail">
    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3><%= link_to event.title, event %></h3>
          <h3><%= event.event_money %></h3>
          <% if event.users.count == 0 || event.event_money == nil %>
            <% nil %>
          <% else %>
            <p>Каждому:</p> <%= event.event_money / event.users.count %>
          <% end %>
          <p>Кол-во участников: <%= event.users.count %></p>
          <% event.users.each do |user| %>
            <%= user.name %>
          <% end %>
          <h3><small><%= l event.datetime, format: :short %></small></h3>
          <% if event.status == true %>
          <h3> Продано </h3>
          <% else %>
          <%= link_to "Редактировать", edit_event_path(event), class: 'btn btn-primary'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
